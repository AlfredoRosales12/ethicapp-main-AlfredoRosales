<!DOCTYPE html>
<html lang="es" ng-app="Editor">
<head>
    <meta charset="UTF-8">
    <title>DocCollab</title>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
    <script src="libs/pdf.min.js"></script>
    <script src="libs/rangy-core.min.js"></script>
    <script src="libs/rangy-classapplier.min.js"></script>
    <script src="libs/rangy-serializer.min.js"></script>
    <script src="libs/textlayerbuilder.js"></script>
    <script src="libs/angular.min.js"></script>
    <script src="libs/angular-drag-and-drop-lists.min.js"></script>
    <script src="js/editor-ctrl.js"></script>
    <link rel="stylesheet" href="css/bootstrap.min.css"/>
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <link rel="stylesheet" href="css/minimal.css">
    <link rel="stylesheet" href="css/main.css"/>
</head>
<body class="bg-black">

<div class="editor-container" ng-controller="EditorController">

    <div class="row top-bar">
        <div class="col-sm-6">
            <span class="simple-margin-left">Documentos: </span>
            <span ng-repeat="doc in documents" class="side-top-btn" ng-bind="doc.title"
                  ng-class="{'active': $index==selectedDocument}" ng-click="selectPDF($index)"></span>
        </div>
        <div class="col-sm-6">
            <a href="seslist" class="btn btn-sm btn-default pull-right">Atr√°s</a>
            <button class="btn btn-sm btn-default pull-right" ng-click="selectText()">Select Text</button>
        </div>
    </div>

    <div class="row">
        <div id="pdf-container" class="col-sm-9 pdf-content">
            <div class="centered">
                <div ng-repeat="doc in documents" id="pdf-canvas-{{$index}}" class="centered"
                ng-show="$index==selectedDocument"></div>
            </div>
        </div>
        <div class="col-sm-3 side-bar">
            <h3>Ideas Fuerza:</h3>
            <div class="y-scrollable">
                <ul class="list-group" dnd-list="selections">
                    <li ng-repeat="sel in selections" class="list-group-item" dnd-draggable="sel"
                        dnd-moved="selections.splice($index, 1)" dnd-effect-allowed="move">
                        <a ng-click="sel.expanded=!sel.expanded" class="pull-right"><i class="fa fa-minus"></i></a>
                        <strong ng-bind="sel.text"></strong>
                        <span class="text-gray"> - {{documents[sel.document].title}}</span>
                        <div class="input-group" ng-show="sel.expanded">
                            <textarea class="form-control" ng-model="sel.comment" ng-change="selTextChange(sel)"></textarea>
                            <a class="input-group-addon btn btn-default" ng-click="sendIdea(sel)" ng-class="{'bg-lightgreen': sel.status=='saved', 'bg-lightorange': sel.status=='dirty'}">
                                <i class="fa fa-send"></i>
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>

</div>

</body>
</html>